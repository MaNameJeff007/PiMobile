<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bell-o"></i>
        <span class="label label-warning">{{ notifnb }}</span>
</a>
    <ul class="dropdown-menu">
        <li class="header" style="color: #9fcdff;"> Vous avez {{ notifnb }} notifications non lu</li>
        <li>
            <ul class="menu">

                {% for notif in notifications %}

                    <li>
                                <a href="{{ path('setoneunseennotif',{'id':notif.id}) }}">
                                <i class="fa fa-warning text-yellow"></i>
                                {{ notif.title }} {{ notif.description }}
                                <br> &nbsp;&nbsp;&nbsp; Le {{ notif.date|date }}
                                    <br/><br/>
                                <i style="color: red">{% if(notif.seen == 1) %}   <img  style="width: 30px; position: absolute; right: 10%" src="{{ asset('images/icon/seen.png') }}"/>   {% else %} <img  style="width: 30px; position: absolute; right: 10%" src="{{ asset('images/icon/notseen.png') }}"/>  {% endif %}</i>
                            </a>

                    </li>
                    <br/>
                    <hr/>
                {% endfor %}

            </ul>
        </li>
        <li class="footer" ><a href="{{ path('setunseennotif') }}">Marquer tout comme vue</a></li>
    </ul>
