{% extends 'base.html.twig' %}

{% block body %}
    <header id="head" class="secondary" style="margin-bottom: 30px">
        <div class="container">
            <h1>FORUM</h1>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="form-light mt-20">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label>{{ form_label(form.titre) }}</label>
                        {{ form_widget(form.titre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        <label>{{ form_label(form.description) }}</label>
                        {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <input type="submit" class="btn btn-two" value="Create" />
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}