{% extends 'base.html.twig' %}

{% block body %}
    <h1>Absence</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ absence.id }}</td>
            </tr>
            <tr>
                <th>Date_abs</th>
                <td>{% if absence.dateabs %}{{ absence.dateabs|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Justification</th>
                <td>{{ absence.justification }}</td>
            </tr>
            <tr>
                <th>Heuredebut</th>
                <td>{{ absence.heuredebut }}</td>
            </tr>
            <tr>
                <th>Heurefin</th>
                <td>{{ absence.heurefin }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{% if absence.etat %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('absences_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('absences_edit', { 'id': absence.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
