{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock head %}

{% block body %}
    {% block fixednavbar %}
        {{ parent() }}
    {% endblock fixednavbar %}

    {% block container %}
        <div class="container" style="margin-top: 65px; margin-bottom: 25px">
            <table class="table table-striped">
                <tr>
                    <th>Id</th>
                    <th>Id_trimestre</th>
                    <th>Eleve</th>
                    <th>Matiere</th>
                    <th>Moyenne</th>
                </tr>
                {% if moyennes is defined  %}
                {% for moyenne in moyennes %}
                    <tr>
                        <td>{{ moyenne.id }}</td><td>{{ moyenne.trimestre }}</td>
                        <td>{{ moyenne.eleve.nom }}</td><td>{{ moyenne.matiere }}</td><td>{{ moyenne.moyenne }}</td>
                    </tr>
                {% endfor %}
                {% endif %}
            </table>
        </div>

        <div class="container" id="div_chart">
            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
            <script type="text/javascript">
                {% if Chart is defined  %}
                {{ gc_draw(Chart, 'div_chart')}}
                {% endif %}
            </script>
        </div>
    {% endblock container %}
    {% block footer %}
        {{ parent() }}
    {% endblock footer %}
{% endblock body %}
