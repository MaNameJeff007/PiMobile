{% extends 'base.html.twig' %}

{% block body %}
    <h1>Note</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ note.type }}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ note.valeur }}</td>
            </tr>
            <tr>
                <th>Id_trimestre</th>
                <td>{{ note.idtrimestre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('notes_edit', { 'id': note.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
