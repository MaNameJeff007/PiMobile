{% extends 'Back/base.html.twig' %}




{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block body %}



    {% block header %}
        {{ parent() }}
    {% endblock header  %}

    {% block sideBar %}
        {{ parent() }}
    {% endblock  sideBar %}

    {% block container %}
        {{ parent() }}
    {% endblock container %}



    {% block classes %}


        <h1>Classes list</h1>

        <div class="main-content">

            <div class="col-md-12">

                <h3 class="title-5 m-b-35">Seances</h3>

                <div class="table-data__tool">

                    <div class="table-data__tool-left">


                    <div class="table-data__tool-right">
                        {{ form(form) }}
                        <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">


                            <div class="dropDownSelect2"></div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>
                        <tr>

                            <th>Jour</th>
                            <th>heure d√©but</th>
                            <th>Enseignant</th>
                            <th>Classe</th>
                            <th>Salle</th>
                            <th>Matiere</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for seance in seances %}
                            <tr class="tr-shadow">
                            <tr class="spacer"></tr>

                            <tr class="tr-shadow">

                                <td>{{ seance.jour }}</td>
                                <td>{{ seance.hdeb }}</td>
                                <td>{{ seance.enseignant }}</td>
                                <td>{{ seance.classe.libelle }}</td>
                                <td>{{ seance.salle.libelle }}</td>
                                <td>{{ seance.matiere.nom }}</td>

                                <td>
                                    <div class="table-data-feature">
                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Send">
                                            <i class="zmdi zmdi-mail-send"></i>
                                        </button>

                                        <a href="{{ path('seance_edit', { 'id': seance.id }) }}"> <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <i class="zmdi zmdi-edit"></i> </button></a>

                                        <a href="{{ path('supprimer_seance', { 'id': seance.id }) }}"> <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <i class="zmdi zmdi-delete"></i>
                                            </button></a>
                                        <button class="item" data-toggle="tooltip" data-placement="top" title="More">
                                            <i class="zmdi zmdi-more"></i>
                                        </button>

                                    </div>
                                </td>
                            </tr>
                            <tr class="spacer"></tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('seance_new') }}"><button class="au-btn au-btn-icon au-btn--green au-btn--small">
                            <i class="zmdi zmdi-plus"></i>Ajouter une seance</button></a>
                </div>
            </div>

        </div>
    {% endblock classes %}
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

