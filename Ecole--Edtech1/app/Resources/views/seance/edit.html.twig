    {{ form_start(edit_form) }}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>Modifier Classe</strong>
                        </div>
                        <div class="card-body card-block">
