{% extends 'base2.html.twig' %}

{% block body %}
    <h1>Like</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ like.id }}</td>
            </tr>
            <tr>
                <th>Createur</th>
                <td>{{ like.createur }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ like.type }}</td>
