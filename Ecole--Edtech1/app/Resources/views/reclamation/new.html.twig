{% extends 'Front/front.base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1 class="section-title">Envoyer une réclamation</h1>
            <p>
                Remplissez ce formulaire pour envoyer votre réclamation
            </p>


    {{ form_start(form) }}
            <div class="form-group">
        <label>{{ form_label(form.type) }}</label>
        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label>Nom de l'objet que vous voulez réclamer</label>
                {{ form_widget(form.nomobjet, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label>{{ form_label(form.description) }}</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <input type="submit" class="btn btn-two" value="Envoyer" />

    {{ form_end(form) }}


    <br/>
            <a href="{{ path('reclamation_index') }}" class="btn">Consulter vos réclamations</a>

        </div>
    </div>
</div>

{% endblock %}
