{% extends 'base2.html.twig' %}

{% block body %}
    <h1>Score</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ score.id }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ score.score }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if score.date %}{{ score.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('score_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('score_edit', { 'id': score.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
